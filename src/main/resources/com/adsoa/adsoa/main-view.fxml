<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adsoa.adsoa.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <GridPane alignment="CENTER" hgap="5" vgap="5" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="5.0" prefWidth="30.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="5.0" prefWidth="30.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="5.0" prefWidth="30.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="5.0" prefWidth="30.0" />
         <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
         <ColumnConstraints maxWidth="26.0" minWidth="26.0" prefWidth="26.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints />
        </rowConstraints>

        <TextField fx:id="displayField" alignment="CENTER" editable="false" prefHeight="20.0" GridPane.columnIndex="0" GridPane.columnSpan="4" />
        <TextArea fx:id="displayArea" editable="false" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="1" />

        <Button onAction="#onDigitButtonClicked" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button onAction="#onDigitButtonClicked" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button onAction="#onDigitButtonClicked" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button onAction="#onOperationButtonClicked" text="/" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <Button onAction="#onDigitButtonClicked" text="4" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button onAction="#onDigitButtonClicked" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button onAction="#onDigitButtonClicked" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button onAction="#onOperationButtonClicked" text="*" GridPane.columnIndex="3" GridPane.rowIndex="3" />

        <Button onAction="#onDigitButtonClicked" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Button onAction="#onDigitButtonClicked" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button onAction="#onDigitButtonClicked" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <Button onAction="#onOperationButtonClicked" text="-" GridPane.columnIndex="3" GridPane.rowIndex="4" />

        <Button onAction="#onDigitButtonClicked" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
        <Button onAction="#onOperationButtonClicked" text="=" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Button onAction="#onOperationButtonClicked" text="+" GridPane.columnIndex="3" GridPane.rowIndex="5" />
        <Button onAction="#onDecimalButtonClicked" text="." GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Button onAction="#onClearButtonClicked" text="C" GridPane.columnIndex="5" GridPane.columnSpan="1" GridPane.rowIndex="2" />
        <Button onAction="#onBackspaceButtonClicked" text="←" textOverrun="CLIP" GridPane.columnIndex="5" GridPane.columnSpan="1" GridPane.rowIndex="3" />

    </GridPane>







</VBox>
